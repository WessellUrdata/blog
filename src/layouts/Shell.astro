---
interface Props {
  title?: string;
}

const { title } = Astro.props;

import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import WeatherCard from "../components/WeatherCard.astro";
import WeatherInfo from "../components/WeatherInfo.astro";
import "../styles/global.css";

import twemoji from "../twemoji/twemoji.esm.js";

import { twemojiSettings } from "../constants.ts";

const slotHtml: string = twemoji.parse(await Astro.slots.render("default"), twemojiSettings);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Welcome to the World of ☺️" />
    <meta name="viewport" content="width=device-width" />
    <title>{title ? `${title} -` : ""} Wessell's ☺️site</title>

    <!-- Favicon BS, SVG/PNG/ICO should be enough, and I don't care about Apple devices -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
  </head>
  <body class="flex flex-col min-h-dvh">
    <Header />
    <main class="flex-grow m-4 px-2 mx-auto max-w-[900px]">
      <Fragment set:html={slotHtml} />
    </main>
    <Footer />
  </body>
</html>
