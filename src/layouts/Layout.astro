---
interface Props {
  title: string;
}

const { title } = Astro.props;

import twemoji from "../twemoji/twemoji.esm.js";

const html: string = twemoji.parse(await Astro.slots.render("default"), {
  base: "/twemoji/",
  folder: "svg",
  ext: ".svg",
});
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Welcome to the World of ☺️" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
  </head>
  <body>
    <Fragment set:html={html} />
  </body>
</html>
<style is:global>
  img.emoji {
    height: 1.2em;
    width: 1.2em;
    margin: 0 0.025em;
    vertical-align: sub;
  }
</style>
