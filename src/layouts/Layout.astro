---
interface Props {
  title: string;
}

const { title } = Astro.props;

import twemoji from "../twemoji/twemoji.esm.js";

const html: string = twemoji.parse(await Astro.slots.render("default"), {
  base: "/twemoji/",
  folder: "svg",
  ext: ".svg",
});

console.log(html);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Fragment set:html={html} />
  </body>
</html>
<style is:global>
  img.emoji {
    height: 1em;
    width: 1em;
    margin: 0 0.05em 0 0.1em;
    vertical-align: -0.1em;
  }
</style>
