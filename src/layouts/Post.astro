---
import Shell from "./Shell.astro";

import "katex/dist/katex.min.css";
import TitleCard from "../components/Layout/TitleCard.astro";
import E from "../components/E.astro";

const { title, date, updateDate, category, description } = Astro.props.frontmatter;
---

<Shell title={title} ogTitle={title} ogDescription={description}>
  <article class="prose
  prose-code:break-words">
    <TitleCard title={title} date={date} updateDate={updateDate} category={category} description={description} />

    <E>
      <style is:inline>
        article img:not(.emoji) {
          margin: 0 auto;
          max-height: 360px;
          object-fit: contain;
          height: 91.667%;
          border-radius: 0.5rem;
        }
      </style>
      <slot />
    </E>
  </article>
</Shell>
