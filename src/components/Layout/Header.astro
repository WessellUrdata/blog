---
import E from "../E.astro";

const navItems = [
  { href: "/about", text: "About me 🫂" },
  { href: "/screensaver", text: "☺️saver" },
  { href: "https://dl.wesl.cc", text: "Public Downloads 📦" },
];
---

<header class="min-h-14 w-full bg-primary border-b-[.5px] border-gray-400 flex flex-col sm:flex-row items-center">
  <a
    class="inline-flex items-center text-lg h-12 min-h-12 cursor-pointer select-none px-2 text-center gap-2 font-semibold"
    tabindex="0"
    href="/"
  >
    <img class="w-10 h-10" alt="Wessell's site logo" src="/logo.svg" />
    <span>Wessell's <E>☺️</E>site</span>
  </a>
  <nav>
    <ul class="sm:flex sm:flex-row grid justify-items-center">
      {
        navItems.map((item) => (
          <li>
            <a
              class="btn btn-ghost"
              href={item.href}
              target={item.href.startsWith("http") ? "_blank" : "_self"}
              rel="noreferrer"
            >
              <span>
                <E>{item.text}</E>
              </span>
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
