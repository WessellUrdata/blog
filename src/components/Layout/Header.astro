---
import E from "../E.astro";

const navItems = [
  { href: "/about", text: "About me 🫂" },
  { href: "/screensaver", text: "☺️saver" },
  { href: "https://dl.wesl.cc", text: "Public Downloads 📦" },
];
---

<header p="y-1.5 x-2" border="b-[.5px] gray-400" flex="~ col sm:row" w-full bg-primary items-center>
  <a
    class="flex items-center text-lg font-semibold cursor-pointer select-none gap-2"
    m="y-2 sm:y-0"
    tabindex="0"
    href="/"
  >
    <img class="w-10 h-10" alt="Wessell's site logo" src="/logo.svg" />
    <span>Wessell's <E>☺️</E>site</span>
  </a>
  <nav class="sm:ml-auto my-1">
    <ul class="justify-center gap-3" flex="~ wrap">
      {
        navItems.map((item) => (
          <li class="my-1">
            <a
              class="font-semibold text-sm border-2 rounded-xl border-accent"
              p="x-3 y-2"
              href={item.href}
              target={item.href.startsWith("http") ? "_blank" : "_self"}
              rel="noreferrer"
            >
              <E>{item.text}</E>
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
